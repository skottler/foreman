<li class="dropdown">
  <%= link_to ((Location.current.name.upcase rescue("Select")) + content_tag(:span,'', :class=>"caret")).html_safe, "#", :class => "dropdown-toggle", :'data-toggle'=>"dropdown", :title => 'Current Location' %>
  <ul class="dropdown-menu">
    <li class='navbar-text ca'>Locations</li>
    <% User.current.taxonomies.each do |tax| %>
      <li><%= link_to(tax.name, select_taxonomy_path(tax)) %></li>
    <% end -%>
  </ul>
</li>
