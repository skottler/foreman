<% title "Resource Groups" %>

<% title_actions display_link_if_authorized("New Resource Group", hash_for_new_location_path), help_path %>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= sort :name %></th>
    <th></th>
  </tr>
  <% @resourcegroups.each do |resourcegroup| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to_if_authorized resourcegroup.name, hash_for_edit_resourcegroup_path(:id => resourcegroup)%></td>
      <td class="buttons"><%= display_delete_if_authorized hash_for_resourcegroup_path(:id => resourcegroup), :confirm => "Delete #{resourcegroup.name}?" %></td>
    </tr>
  <% end %>
</table>
<%= page_entries_info @resourcegroups %>
<%= will_paginate     @resourcegroups %>
